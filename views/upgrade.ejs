    .features { text-align: left; background: #f9fafb; padding: 20px; border-radius: 12px; margin-bottom: 30px; }
    .features li { margin-bottom: 10px; color: #374151; }
    .btn { display: inline-block; padding: 16px 32px; background: #6366f1; color: white; text-decoration: none; border-radius: 8px; font-size: 18px; font-weight: 600; border: none; cursor: pointer; }
    .btn:hover { background: #4f46e5; }
    .btn-secondary { background: #f3f4f6; color: #333; margin-left: 10px; }
    .price { font-size: 36px; font-weight: bold; color: #6366f1; margin-bottom: 20px; }
    .price span { font-size: 18px; color: #666; font-weight: normal; }
  </style>
</head>
